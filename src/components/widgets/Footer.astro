---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-12 md:py-16">
      <!-- Columna del Logo y Descripción -->
      <div class="col-span-12 lg:col-span-4 pr-0 lg:pr-8">
        <div class="mb-4">
          <a
            class="inline-block font-bold text-2xl bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
            href={getHomePermalink()}
          >
            {SITE?.name}
          </a>
        </div>
        <p class="text-sm text-muted mb-4 max-w-md">
          Agencia de desarrollo full-stack especializada en crear soluciones tecnológicas que impulsan el crecimiento
          digital de tu negocio.
        </p>
        <div class="text-xs text-muted flex flex-wrap gap-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' · ' : ''}
                <a
                  class="text-muted hover:text-blue-600 dark:hover:text-blue-400 hover:underline transition duration-150 ease-in-out"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>

      <!-- Columnas de Links -->
      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="text-gray-900 dark:text-gray-100 font-bold mb-4 text-sm uppercase tracking-wider">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm space-y-2">
                {links.map(({ text, href, ariaLabel }) => (
                  <li>
                    <a
                      class="text-muted hover:text-blue-600 dark:hover:text-blue-400 transition duration-150 ease-in-out inline-flex items-center group"
                      href={href}
                      aria-label={ariaLabel}
                    >
                      <span class="group-hover:translate-x-0.5 transition-transform duration-150">
                        <Fragment set:html={text} />
                      </span>
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>

    <!-- Línea separadora -->
    <div class="border-t border-gray-200 dark:border-slate-800"></div>

    <!-- Sección inferior: Redes sociales y Copyright -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between py-6 md:py-8 gap-4">
      <div class="order-2 md:order-1">
        <Fragment set:html={footNote} />
      </div>

      {
        socialLinks?.length ? (
          <div class="order-1 md:order-2">
            <p class="text-xs text-muted mb-2 md:text-right">Síguenos en redes sociales</p>
            <ul class="flex gap-2">
              {socialLinks.map(({ ariaLabel, href, text, icon }) => (
                <li>
                  <a
                    class="text-muted dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-100 dark:hover:bg-gray-700/50 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-lg text-sm p-2.5 inline-flex items-center transition-all duration-200 hover:scale-110"
                    aria-label={ariaLabel}
                    href={href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {icon && <Icon name={icon} class="w-5 h-5" />}
                    <Fragment set:html={text} />
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ) : (
          ''
        )
      }
    </div>
  </div>
</footer>
