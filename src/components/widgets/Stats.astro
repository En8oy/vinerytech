---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="flex flex-wrap justify-center gap-4 md:gap-6">
    {
      stats &&
        stats.map(({ amount, title, icon }, index) => (
          <div
            class="p-6 md:p-8 min-w-[200px] md:min-w-[240px] text-center glass-card rounded-2xl transition-all duration-300 hover:scale-105 hover:glow-accent intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade intersect-quarter group"
            style={`animation-delay: ${index * 100}ms`}
          >
            {icon && (
              <div class="flex items-center justify-center mx-auto mb-4 text-primary transition-transform duration-300 group-hover:scale-110">
                <Icon name={icon} class="w-10 h-10" />
              </div>
            )}
            {amount && (
              <div class="font-heading gradient-text text-[2.6rem] font-bold lg:text-5xl xl:text-6xl">{amount}</div>
            )}
            {title && (
              <div class="text-sm font-medium uppercase tracking-widest text-gray-800 dark:text-slate-400 lg:text-base mt-2">
                {title}
              </div>
            )}
          </div>
        ))
    }
  </div>
</WidgetWrapper>
