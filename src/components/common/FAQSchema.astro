---
/**
 * Componente para agregar FAQPage Schema
 * Hace que las FAQs aparezcan en los resultados de Google
 */

export interface FAQ {
  question: string;
  answer: string;
}

export interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
