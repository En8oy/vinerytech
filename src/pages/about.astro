---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Nosotros',
  description:
    'Conoce a VineryDev - Agencia de desarrollo full-stack especializada en automatización, desarrollo web, infraestructura cloud y marketing digital.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Sobre Nosotros"
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Equipo de desarrollo trabajando',
    }}
  >
    <Fragment slot="title">
      Tu socio tecnológico para <br />
      <span class="text-accent dark:text-white highlight">crecer sin límites</span>
    </Fragment>

    <Fragment slot="subtitle">
      Somos una agencia de desarrollo full-stack con pasión por la tecnología y obsesión por los resultados.
      Transformamos ideas en soluciones digitales que impulsan negocios, automatizan procesos y generan valor real.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="VineryDev en números"
    stats={[
      { title: 'Proyectos Completados', amount: '150+' },
      { title: 'Clientes Satisfechos', amount: '80+' },
      { title: 'Horas Automatizadas', amount: '100K+' },
      { title: 'Años de Experiencia', amount: '5+' },
    ]}
  />

  <!-- Features3 Widget - Servicios ************** -->

  <Features3
    title="Lo que hacemos"
    subtitle="Ofrecemos soluciones tecnológicas integrales para empresas que quieren crecer, optimizar y escalar."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Desarrollo Web',
        description:
          'Aplicaciones web modernas con React, Vue, Laravel, Node.js. Desde landing pages hasta plataformas enterprise.',
        icon: 'tabler:code',
      },
      {
        title: 'Automatización',
        description: 'Implementamos N8N, Make y Zapier para eliminar tareas repetitivas y conectar todos tus sistemas.',
        icon: 'tabler:robot',
      },
      {
        title: 'Infraestructura Cloud',
        description:
          'AWS, Google Cloud, DigitalOcean. Servidores seguros, escalables y con 99.9% de uptime garantizado.',
        icon: 'tabler:cloud',
      },
    ]}
  />

  <!-- Features3 Widget - Más servicios ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Marketing Digital',
        description:
          'SEO, SEM, redes sociales y email marketing. Estrategias que generan tráfico cualificado y conversiones.',
        icon: 'tabler:chart-arrows',
      },
      {
        title: 'E-commerce',
        description: 'Tiendas online con Shopify, WooCommerce o desarrollo a medida. Optimizadas para vender más.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Consultoría Tech',
        description: 'Asesoría en arquitectura de software, selección de tecnologías y transformación digital.',
        icon: 'tabler:bulb',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Equipo de desarrollo colaborando',
    }}
  />

  <!-- Steps2 Widget - Valores ****************** -->

  <Steps2
    title="Nuestros valores"
    subtitle="Los principios que guían cada proyecto y cada línea de código que escribimos."
    items={[
      {
        title: 'Resultados sobre promesas',
        description:
          'No vendemos humo. Cada proyecto tiene métricas claras y entregables definidos. Tu éxito es nuestro éxito.',
      },
      {
        title: 'Transparencia total',
        description: 'Comunicación clara, precios sin sorpresas y acceso completo a tu proyecto en todo momento.',
      },
      {
        title: 'Código de calidad',
        description:
          'Seguimos las mejores prácticas de la industria. Código limpio, documentado y mantenible a largo plazo.',
      },
      {
        title: 'Partnership, no proveedores',
        description:
          'Nos involucramos en tu negocio. Entendemos tus objetivos y proponemos soluciones que realmente impactan.',
      },
    ]}
  />

  <!-- Steps2 Widget - Por qué elegirnos ****************** -->

  <Steps2
    title="¿Por qué VineryDev?"
    subtitle="Lo que nos diferencia de otras agencias y freelancers."
    isReversed={true}
    callToAction={{
      text: 'Agenda una consulta',
      href: '/contact',
    }}
    items={[
      {
        title: 'Equipo multidisciplinario',
        description: 'Desarrolladores, diseñadores, expertos en cloud y marketing trabajando juntos en tu proyecto.',
        icon: 'tabler:users',
      },
      {
        title: 'Tecnología de vanguardia',
        description: 'Usamos las herramientas más modernas y eficientes. Tu proyecto no quedará obsoleto.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Soporte continuo',
        description: 'No desaparecemos después de entregar. Ofrecemos mantenimiento, soporte y mejoras continuas.',
        icon: 'tabler:headset',
      },
      {
        title: 'Precios justos',
        description: 'Tarifas competitivas sin sacrificar calidad. Inversión inteligente con ROI medible.',
        icon: 'tabler:coin',
      },
    ]}
  />

  <!-- Features2 Widget - Stack tecnológico ************** -->

  <Features2
    title="Nuestro stack tecnológico"
    tagline="Tecnologías"
    columns={4}
    items={[
      {
        title: 'Frontend',
        description: 'React, Vue.js, Next.js, Astro, Tailwind CSS',
        icon: 'tabler:brand-react',
      },
      {
        title: 'Backend',
        description: 'Node.js, Laravel, Python, Express, FastAPI',
        icon: 'tabler:server',
      },
      {
        title: 'Cloud & DevOps',
        description: 'AWS, GCP, Docker, Kubernetes, CI/CD',
        icon: 'tabler:cloud',
      },
      {
        title: 'Automatización',
        description: 'N8N, Make, Zapier, APIs, Web Scraping',
        icon: 'tabler:robot',
      },
    ]}
  />

  <!-- Features2 Widget - Contacto ************** -->

  <Features2
    title="¿Listo para empezar?"
    tagline="Contáctanos"
    columns={2}
    items={[
      {
        title: 'Agenda una llamada',
        description:
          'Cuéntanos tu proyecto en una videollamada de 30 minutos sin compromiso. Analizamos tu caso y te damos recomendaciones.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Escríbenos',
        description:
          'Envíanos un mensaje con los detalles de tu proyecto. Respondemos en menos de 24 horas con una propuesta inicial.',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
