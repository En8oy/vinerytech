          {
            description: '✓ Llamadas semanales de seguimiento',
          },
          {
            description: '✓ Consultoría estratégica incluida',
          },
          {
            description: '· Contrato mínimo: 3 meses',
          },
        ],
        callToAction: {
          text: 'Hablar con Ventas',
          href: '/contact',
        },
