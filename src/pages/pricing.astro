      <!-- Automatización Compleja -->
      <div class="bg-white dark:bg-slate-900 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
        <div class="text-sm text-blue-600 font-semibold mb-2">AUTOMATIZACIÓN COMPLEJA</div>
        <h3 class="text-xl font-bold mb-3">Sistema CRM + Marketing Automation</h3>
        <div class="text-3xl font-bold text-green-600 mb-4">$12,000</div>
